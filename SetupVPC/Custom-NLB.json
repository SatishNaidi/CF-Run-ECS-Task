{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "To Create the Platform VPC, with 3 Private and 3 Public Subnets",
	"Parameters": {
		"Environment": {
			"Description": "Select an Environment for setting up network",
			"Type": "String",
			"AllowedValues": [
				"Prod",
				"Stag",
				"Supp",
				"Perf",
				"Test"
			]
		},
		"AZs": {
			"Type": "List<AWS::EC2::AvailabilityZone::Name>",
			"Default": "us-east-1a,us-east-1b,us-east-1c",
			"Description": "Select Three AZs, where the Public and Private Subnets will be deployed."
		},
		"CidrBit": {
			"Description": "Select the Cidr bit for vpc creation, 10.X.0.0/16",
			"Type": "Number",
			"MaxValue": 255,
			"MinValue": 0
		},
		"SSHKeyName": {
			"Description": "Name of an existing EC2 KeyPair to enable SSH access to the instances",
			"Type": "AWS::EC2::KeyPair::KeyName",
			"ConstraintDescription": "Must be the name of an existing EC2 KeyPair."
		},
		"AmiID": {
			"Default": "ami-02354e95b39ca8dec",
			"Type": "String"
		},
		"InstanceRole": {
			"Default": "SSM_EC2_Role",
			"Type": "String"
		}
	},
	"Metadata": {
		"AWS::CloudFormation::Interface": {
			"ParameterGroups": [
				{
					"Label": {
						"default": "VPC Configuration"
					},
					"Parameters": [
						"Environment",
						"CidrBit",
						"AZs"
					]
				},
				{
					"Label": {
						"default": "EC2 Create"
					},
					"Parameters": [
						"AmiID",
						"InstanceRole",
						"SSHKeyName"
					]
				}
			]
		}
	},
	"Resources": {
		"VPC": {
			"Type": "AWS::EC2::VPC",
			"Properties": {
				"CidrBlock": {
					"Fn::Join": [
						".",
						[
							"10",
							{
								"Ref": "CidrBit"
							},
							"0.0/16"
						]
					]
				},
				"EnableDnsSupport": true,
				"EnableDnsHostnames": true,
				"Tags": [
					{
						"Key": "Name",
						"Value": {
							"Fn::Sub": "${AWS::StackName}-${Environment}-VPC"
						}
					}
				]
			}
		},
		"InternetGateway": {
			"Type": "AWS::EC2::InternetGateway",
			"Properties": {
				"Tags": [
					{
						"Key": "Name",
						"Value": {
							"Fn::Sub": "${AWS::StackName} ${Environment} IGW"
						}
					}
				]
			}
		},
		"InternetGatewayAttachment": {
			"Type": "AWS::EC2::VPCGatewayAttachment",
			"Properties": {
				"InternetGatewayId": {
					"Ref": "InternetGateway"
				},
				"VpcId": {
					"Ref": "VPC"
				}
			}
		},
		"PublicSubnetAZ1": {
			"Type": "AWS::EC2::Subnet",
			"Properties": {
				"VpcId": {
					"Ref": "VPC"
				},
				"AvailabilityZone": {
					"Fn::Select": [
						"0",
						{
							"Ref": "AZs"
						}
					]
				},
				"CidrBlock": {
					"Fn::Join": [
						".",
						[
							"10",
							{
								"Ref": "CidrBit"
							},
							"0",
							"0/19"
						]
					]
				},
				"MapPublicIpOnLaunch": false,
				"Tags": [
					{
						"Key": "Name",
						"Value": {
							"Fn::Sub": "${AWS::StackName} ${Environment} AZ1 - Public Subnet"
						}
					}
				]
			}
		},
		"PublicSubnetAZ2": {
			"Type": "AWS::EC2::Subnet",
			"Properties": {
				"VpcId": {
					"Ref": "VPC"
				},
				"AvailabilityZone": {
					"Fn::Select": [
						"1",
						{
							"Ref": "AZs"
						}
					]
				},
				"CidrBlock": {
					"Fn::Join": [
						".",
						[
							"10",
							{
								"Ref": "CidrBit"
							},
							"32",
							"0/19"
						]
					]
				},
				"MapPublicIpOnLaunch": false,
				"Tags": [
					{
						"Key": "Name",
						"Value": {
							"Fn::Sub": "${AWS::StackName} ${Environment} AZ2 - Public Subnet"
						}
					}
				]
			}
		},
		"PublicSubnetAZ3": {
			"Type": "AWS::EC2::Subnet",
			"Properties": {
				"VpcId": {
					"Ref": "VPC"
				},
				"AvailabilityZone": {
					"Fn::Select": [
						"2",
						{
							"Ref": "AZs"
						}
					]
				},
				"CidrBlock": {
					"Fn::Join": [
						".",
						[
							"10",
							{
								"Ref": "CidrBit"
							},
							"64",
							"0/19"
						]
					]
				},
				"MapPublicIpOnLaunch": false,
				"Tags": [
					{
						"Key": "Name",
						"Value": {
							"Fn::Sub": "${AWS::StackName} ${Environment} AZ3 - Public Subnet"
						}
					}
				]
			}
		},
		"PrivateSubnetAZ1": {
			"Type": "AWS::EC2::Subnet",
			"Properties": {
				"VpcId": {
					"Ref": "VPC"
				},
				"AvailabilityZone": {
					"Fn::Select": [
						"0",
						{
							"Ref": "AZs"
						}
					]
				},
				"CidrBlock": {
					"Fn::Join": [
						".",
						[
							"10",
							{
								"Ref": "CidrBit"
							},
							"128",
							"0/19"
						]
					]
				},
				"MapPublicIpOnLaunch": false,
				"Tags": [
					{
						"Key": "Name",
						"Value": {
							"Fn::Sub": "${AWS::StackName} ${Environment} AZ1 - Private Subnet"
						}
					}
				]
			}
		},
		"PrivateSubnetAZ2": {
			"Type": "AWS::EC2::Subnet",
			"Properties": {
				"VpcId": {
					"Ref": "VPC"
				},
				"AvailabilityZone": {
					"Fn::Select": [
						"1",
						{
							"Ref": "AZs"
						}
					]
				},
				"CidrBlock": {
					"Fn::Join": [
						".",
						[
							"10",
							{
								"Ref": "CidrBit"
							},
							"160",
							"0/19"
						]
					]
				},
				"MapPublicIpOnLaunch": false,
				"Tags": [
					{
						"Key": "Name",
						"Value": {
							"Fn::Sub": "${AWS::StackName} ${Environment} AZ2 - Private Subnet"
						}
					}
				]
			}
		},
		"PrivateSubnetAZ3": {
			"Type": "AWS::EC2::Subnet",
			"Properties": {
				"VpcId": {
					"Ref": "VPC"
				},
				"AvailabilityZone": {
					"Fn::Select": [
						"2",
						{
							"Ref": "AZs"
						}
					]
				},
				"CidrBlock": {
					"Fn::Join": [
						".",
						[
							"10",
							{
								"Ref": "CidrBit"
							},
							"192",
							"0/19"
						]
					]
				},
				"MapPublicIpOnLaunch": false,
				"Tags": [
					{
						"Key": "Name",
						"Value": {
							"Fn::Sub": "${AWS::StackName} ${Environment} AZ3 - Private Subnet"
						}
					}
				]
			}
		},
		"NatGateway1EIP": {
			"Type": "AWS::EC2::EIP",
			"DependsOn": "InternetGatewayAttachment",
			"Properties": {
				"Domain": {
					"Fn::Sub": "${AWS::StackName} ${Environment} NGW1 EIP"
				}
			}
		},
		"NatGateway2EIP": {
			"Type": "AWS::EC2::EIP",
			"DependsOn": "InternetGatewayAttachment",
			"Properties": {
				"Domain": {
					"Fn::Sub": "${AWS::StackName} ${Environment} NGW2 EIP"
				}
			}
		},
		"NatGateway3EIP": {
			"Type": "AWS::EC2::EIP",
			"DependsOn": "InternetGatewayAttachment",
			"Properties": {
				"Domain": {
					"Fn::Sub": "${AWS::StackName} ${Environment} NGW3 EIP"
				}
			}
		},
		"NatGateway1": {
			"Type": "AWS::EC2::NatGateway",
			"Properties": {
				"AllocationId": {
					"Fn::GetAtt": [
						"NatGateway1EIP",
						"AllocationId"
					]
				},
				"SubnetId": {
					"Ref": "PublicSubnetAZ1"
				},
				"Tags": [
					{
						"Key": "Name",
						"Value": {
							"Fn::Sub": "${AWS::StackName} ${Environment} NGW1"
						}
					}
				]
			}
		},
		"NatGateway2": {
			"Type": "AWS::EC2::NatGateway",
			"Properties": {
				"AllocationId": {
					"Fn::GetAtt": [
						"NatGateway2EIP",
						"AllocationId"
					]
				},
				"SubnetId": {
					"Ref": "PublicSubnetAZ2"
				},
				"Tags": [
					{
						"Key": "Name",
						"Value": {
							"Fn::Sub": "${AWS::StackName} ${Environment} NGW2"
						}
					}
				]
			}
		},
		"NatGateway3": {
			"Type": "AWS::EC2::NatGateway",
			"Properties": {
				"AllocationId": {
					"Fn::GetAtt": [
						"NatGateway3EIP",
						"AllocationId"
					]
				},
				"SubnetId": {
					"Ref": "PublicSubnetAZ3"
				},
				"Tags": [
					{
						"Key": "Name",
						"Value": {
							"Fn::Sub": "${AWS::StackName} ${Environment} NGW3"
						}
					}
				]
			}
		},
		"PublicRouteTable": {
			"Type": "AWS::EC2::RouteTable",
			"Properties": {
				"VpcId": {
					"Ref": "VPC"
				},
				"Tags": [
					{
						"Key": "Name",
						"Value": {
							"Fn::Sub": "${Environment} Public Routes to Internet"
						}
					}
				]
			}
		},
		"DefaultPublicRoute": {
			"Type": "AWS::EC2::Route",
			"DependsOn": "InternetGatewayAttachment",
			"Properties": {
				"RouteTableId": {
					"Ref": "PublicRouteTable"
				},
				"DestinationCidrBlock": "0.0.0.0/0",
				"GatewayId": {
					"Ref": "InternetGateway"
				}
			}
		},
		"PrivateRoute1": {
			"Type": "AWS::EC2::Route",
			"DependsOn": "InternetGatewayAttachment",
			"Properties": {
				"RouteTableId": {
					"Ref": "PrivateRouteTable1"
				},
				"DestinationCidrBlock": "0.0.0.0/0",
				"NatGatewayId": {
					"Ref": "NatGateway1"
				}
			}
		},
		"PrivateRoute2": {
			"Type": "AWS::EC2::Route",
			"DependsOn": "InternetGatewayAttachment",
			"Properties": {
				"RouteTableId": {
					"Ref": "PrivateRouteTable2"
				},
				"DestinationCidrBlock": "0.0.0.0/0",
				"NatGatewayId": {
					"Ref": "NatGateway2"
				}
			}
		},
		"PrivateRoute3": {
			"Type": "AWS::EC2::Route",
			"DependsOn": "InternetGatewayAttachment",
			"Properties": {
				"RouteTableId": {
					"Ref": "PrivateRouteTable3"
				},
				"DestinationCidrBlock": "0.0.0.0/0",
				"NatGatewayId": {
					"Ref": "NatGateway3"
				}
			}
		},
		"PrivateRouteTable1": {
			"Type": "AWS::EC2::RouteTable",
			"Properties": {
				"VpcId": {
					"Ref": "VPC"
				},
				"Tags": [
					{
						"Key": "Name",
						"Value": {
							"Fn::Sub": "${Environment}- Private Routes (AZ1)"
						}
					}
				]
			}
		},
		"PrivateRouteTable2": {
			"Type": "AWS::EC2::RouteTable",
			"Properties": {
				"VpcId": {
					"Ref": "VPC"
				},
				"Tags": [
					{
						"Key": "Name",
						"Value": {
							"Fn::Sub": "${Environment}- Private Routes (AZ2)"
						}
					}
				]
			}
		},
		"PrivateRouteTable3": {
			"Type": "AWS::EC2::RouteTable",
			"Properties": {
				"VpcId": {
					"Ref": "VPC"
				},
				"Tags": [
					{
						"Key": "Name",
						"Value": {
							"Fn::Sub": "${Environment}- Private Routes (AZ3)"
						}
					}
				]
			}
		},
		"PublicSubnetAZ1RouteTableAssociation": {
			"Type": "AWS::EC2::SubnetRouteTableAssociation",
			"Properties": {
				"RouteTableId": {
					"Ref": "PublicRouteTable"
				},
				"SubnetId": {
					"Ref": "PublicSubnetAZ1"
				}
			}
		},
		"PublicSubnetAZ2RouteTableAssociation": {
			"Type": "AWS::EC2::SubnetRouteTableAssociation",
			"Properties": {
				"RouteTableId": {
					"Ref": "PublicRouteTable"
				},
				"SubnetId": {
					"Ref": "PublicSubnetAZ2"
				}
			}
		},
		"PublicSubnetAZ3RouteTableAssociation": {
			"Type": "AWS::EC2::SubnetRouteTableAssociation",
			"Properties": {
				"RouteTableId": {
					"Ref": "PublicRouteTable"
				},
				"SubnetId": {
					"Ref": "PublicSubnetAZ3"
				}
			}
		},
		"PrivateSubnetAZ1RouteTableAssociation": {
			"Type": "AWS::EC2::SubnetRouteTableAssociation",
			"Properties": {
				"RouteTableId": {
					"Ref": "PrivateRouteTable1"
				},
				"SubnetId": {
					"Ref": "PrivateSubnetAZ1"
				}
			}
		},
		"PrivateSubnetAZ2RouteTableAssociation": {
			"Type": "AWS::EC2::SubnetRouteTableAssociation",
			"Properties": {
